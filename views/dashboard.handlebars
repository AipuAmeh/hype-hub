<!-- Button trigger modal -->
<button type="button submit" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
 Add New Card
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Enter A Title For Your List</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input class="newListTitle" type="text" placeholder="Title">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="savedTitle">Save</button>
      </div>
    </div>
  </div>
</div>
</div>

